{
    "manifest_version": 3,
    "name": "Gmail Email Improver",
    "version": "1.0",
    "description": "Adds an 'Improve Mail' button to Gmail compose window",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
      "https://mail.google.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "options_page": "options.html"
  }